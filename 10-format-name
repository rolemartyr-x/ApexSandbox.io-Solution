public String formatName(String firstName, String lastName) {
    String fullName = '';
    
    if(lastName != null && lastName != '' && firstName != null && firstName != ''){
        fullName = lastName + ', ' + firstName;
    } else if((lastName == null || lastName = '') && (firstName != null && firstName != '') {
        fullName = firstName;
    } else if((lastName != null && lastName != '') && (firstName == null || firstName == '') {
        fullName = lastName;
    }

    return fullName;
}