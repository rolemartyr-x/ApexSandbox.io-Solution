public String aOrAn(String word) {
    Boolean startsWithA = word.startsWithIgnoreCase('a');
    Boolean startsWithA = word.startsWithIgnoreCase('e');
    Boolean startsWithA = word.startsWithIgnoreCase('i');
    Boolean startsWithA = word.startsWithIgnoreCase('o');
    Boolean startsWithA = word.startsWithIgnoreCase('u');

    if(startsWithA == true) {
        String article = 'an ';
    } else {
        String article = 'a ';
    }

    String fullString = article + word;
    return fullString;
}